# Pyrate Configuration Environment Variables
# Copy this file to .env and modify the values as needed

# Debug mode
PYRATE_DEBUG=false

# Scanner Configuration
PYRATE_SCANNER__MAX_CONCURRENT_REQUESTS=10
PYRATE_SCANNER__REQUEST_TIMEOUT=30
PYRATE_SCANNER__USER_AGENT="Pyrate/0.1.0 Security Scanner"

# API Keys (optional)
PYRATE_API_KEY_SHODAN=your_shodan_api_key_here
PYRATE_API_KEY_VIRUSTOTAL=your_virustotal_api_key_here
PYRATE_API_KEY_CENSYS=your_censys_api_key_here

# Logging Configuration
PYRATE_LOGGING__LEVEL=INFO
PYRATE_LOGGING__FILE_PATH=./logs/pyrate.log

# Report Configuration
PYRATE_REPORTS__OUTPUT_DIRECTORY=./reports
PYRATE_REPORTS__DEFAULT_FORMAT=json